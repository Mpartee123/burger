<div class="row">
    <h1 class="mx-auto">Burgers</h1>
</div>

<div class="row">

    <div class="col text-center">
        <h2>Burgers that have not been eaten!</h2>

        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burgers-block devoured=false}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col text-center">
        <h2>Burgers that have yet to be eaten!</h2>

        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    {{> burgers/burgers-block devoured=true}}
                {{/if}}
            {{/each}}
        </ul>

    </div>
</div>

<div class="row">
    <h2 class="mx-auto">Add a Burger</h2>
</div>

<div class="row">
    <div class="col mx-auto">
        <form class="create-form d-flex justify-content-center">
            <div class="form-group mb-3">
                <input  type="text" id="ca" name="name" class="form-control" placeholder="Burger Name:" aria-label="burger name" aria-describedby="basic-addon1">
<!--                <div class="input-group-prepend">-->
<!--                    <label class="input-group-text" for="inputGroupSelect01">Devoured?</label>-->
<!--                </div>-->
                <select class="custom-select" id="inputGroupSelect01">
                    <option selected value="">Devoured?</option>
                    <option value="0" name="devoured" >Uneaten</option>
                    <option value="1" name="devoured">Devoured</option>
                </select>
                <button type="submit">Add Burger</button>
            </div>
        </form>
    </div>

</div>


